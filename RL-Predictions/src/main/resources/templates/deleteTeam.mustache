{{>header}}
    <form action="/deleteTeam" method="post">
        <p class="addTeamName">Choose the team you want to delete:</p>
        <div class="chooseLeagueNew">
            <select class="form-control" id="teamDeleted" name="teamDeleted">
                {{#teams}}
                    <option>{{teamName}}</option>
                {{/teams}}    
            </select>
        </div>
        <div class="sendModifyButton">
            <input type="submit" value="Apply changes"/>
        </div>
    </form>
{{>footer}}