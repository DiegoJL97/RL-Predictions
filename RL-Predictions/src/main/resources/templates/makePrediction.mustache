{{>headerLong}}
			<form action="/makePrediction" method="post">
				<div class="leagueForm">
					<div class="leaguePredictionDescription verticalCenter">
						<p>Drag the teams into the positions they will be at the end of the season!</p>
					</div>
					<input type="hidden" name="league" value="{{league}}">
					<div class="leaguePredictionOl">
						<ol class="teams list-group">
						{{#teams}}
							<li class="list-group-item d-flex justify-content-between align-items-center clearfix verticalCenter">
								<input type="hidden" value="{{teamName}}" name="liContent">
								<img src="images/teamLogos/{{teamName}}-logo.png" alt="{{teamName}} logo">
								<div class="teamNamePrediction">
									{{teamName}}
								</div>
							</li> 
						{{/teams}}
						</ol>
					</div>
				</div>
				<div class="playersPrediction clearfix">
					<div class="leaguePredictionDescription verticalCenter">
						<p>Pick who will be the savior, clutch playmaker and golden striker of the season!</p>
					</div>
					<div class="onePrediction">
						<img src="images/save.png" alt="Savior of the season">
						<p>Savior of the season</p>
						<select class="form-control" id="saviorPrediction" name="savior">
							{{#players}}
								<option>{{playerName}}</option>
							{{/players}}
						</select>
					</div>
					<div class="onePrediction">
						<img src="images/assist.png" alt="Clutch playmaker of the season">
						<p>Clutch playmaker of the season</p>
						<select class="form-control" id="clutchPrediction" name="clutch">
							{{#players}}
								<option>{{playerName}}</option>
							{{/players}}
						</select>
					</div>
					<div class="onePrediction">
						<img src="images/goal.png" alt="Golden striker of the season">
						<p>Golden striker of the season</p>
						<select class="form-control" id="strikerPrediction" name="striker">
							{{#players}}
								<option>{{playerName}}</option>
							{{/players}}
						</select>
					</div>
				</div>
				<div class="sendLeagueFormButton">
					<input type="submit" value="Make prediction!"/>
				</div>
			</form>
{{>footer}}