{{>header}}
		<div class="homeContent">
			<div class="wrapper fadeInLoginModalDown">
  				<div id="formContent">
    				<div class="fadeInLoginModal first">
						<h2>Sign up</h2>
    				</div>
   					<form class="loginForm" action="/registerPage" method="POST">
      					<input type="text" id="login" class="fadeInLoginModal second" name="username" placeholder="Username">
      					<input type="password" id="password" class="fadeInLoginModal third" name="password" placeholder="Password">
     					<input type="submit" class="fadeInLoginModal fourth" value="Confirm">
    				</form>
					{{#error}}
					<div class="errorFooter">
						<p>{{error}}</p>
					</div>
					{{/error}}
 				</div>
			</div>	
		</div>
{{>footer}}